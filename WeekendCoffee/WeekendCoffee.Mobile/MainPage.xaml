<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeekendCoffee.Mobile.MainPage">

	<Grid RowDefinitions="100, 50, Auto, *" ColumnDefinitions=".70*, .30*" Padding="10" RowSpacing="10" ColumnSpacing="10">

		<Border Grid.Row="0" Grid.ColumnSpan="2" >
			<Image Source="dotnet_bot.svg" BackgroundColor="Grey"/>
		</Border>

		<Border Grid.Row="1" Grid.Column="0" Padding="5">
			<Entry x:Name="Number" Placeholder="Enter your number" Grid.Row="1"	Grid.Column="0"/>
		</Border>

		<Button x:Name="AddButton" Text="Add" Grid.Row="1" Grid.Column="1" Clicked="OnAddButtonClicked"/>

		<Border Grid.Row="2" Grid.ColumnSpan="2" Padding="5">
			<Label x:Name="CurrentMeetingLabel" Grid.Row="2" Grid.ColumnSpan="2" Text="Loading..." />
		</Border>

		<CollectionView Grid.Row="3" Grid.ColumnSpan="2" HorizontalOptions="Center">
			<CollectionView.ItemsSource >
				<x:Array Type="{x:Type x:String}">
					<x:String>Misty</x:String>
					<x:String>Cherkata</x:String>
					<x:String>Mafiata1</x:String>
				</x:Array>
			</CollectionView.ItemsSource>
			<CollectionView.ItemTemplate>
				<DataTemplate>
					<Grid Padding="0,0,0,5">
						<Frame>
							<Label Text="{Binding .}" FontSize="20"/>
						</Frame>
					</Grid>
				</DataTemplate>
			</CollectionView.ItemTemplate>
		</CollectionView>

	</Grid>

</ContentPage>
